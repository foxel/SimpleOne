<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd"
                   logicalFilePath="updates.2013.04">
    <changeSet id="vk-oauth-rename" author="Foxel">
        <renameTable oldTableName="${db.prefix}vk_users" newTableName="${db.prefix}oauth_tokens" />
    </changeSet>
    <changeSet id="vk-oauth-columns" author="Foxel">
        <renameColumn tableName="${db.prefix}oauth_tokens" oldColumnName="vk_id" newColumnName="oauth_uid" columnDataType="CHAR(128) CHARACTER SET ascii" />
        <addColumn tableName="${db.prefix}oauth_tokens">
            <column name="api" type="CHAR(8) CHARACTER SET ascii" defaultValue="vk">
                <constraints nullable="false" />
            </column>
        </addColumn>
        <renameColumn tableName="${db.prefix}oauth_tokens" oldColumnName="token" newColumnName="token" columnDataType="CHAR(255) CHARACTER SET ascii" />
    </changeSet>
</databaseChangeLog>
